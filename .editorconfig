# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.java]
indent_size = 4
dotnet_diagnostic.IDE0130.severity = none

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[Dockerfile]
indent_size = 4
